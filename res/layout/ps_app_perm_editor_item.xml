<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_view_item_height"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_border_size"
    android:paddingLeft="@dimen/list_item_padding_left"
    android:paddingTop="@dimen/margin_border_size" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_item_height" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/perm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/app_name_size" />
            <TextView
                android:id="@+id/perm_name_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/app_content_size"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/app_perm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/list_item_margin_rl"
            android:textColor="@android:color/black" />
    </RelativeLayout>

</LinearLayout>